{
  "name": "playlist-manager",
  "version": "1.0.0",
  "scripts": {
    "client": "cd client && npm start",
    "server": "nodemon server.js",
    "start": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "build": "cd client && npm run build",
    "prod": "cd client && npm run build"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "express": "^4.16.2",
    "mongoose": "^5.0.16",
    "nodemailer": "^4.6.3"
  },
  "devDependencies": {
    "concurrently": "^3.5.0"
  }
}
